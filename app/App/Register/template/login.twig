{% extends 'main.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block left_menu %}{% endblock %}
{% block content %}
	<div class="uk-container" style="margin-top:70px;margin-bottom:50px;">
	<div class="uk-grid uk-grid-collapse">
	<div class="uk-width-medium-4-5 uk-container-center">


		<div class="uk-panel uk-panel-header uk-panel-box uk-panel-box-secondary">
			<div class="uk-panel-title">{{ title }}</div>
			<form class="uk-form">
				<div class="uk-grid uk-grid-small">
					<div class="uk-width-1-1">
						<div class="uk-form-icon fix-iconform">
							<i class="uk-icon-at"></i>
							<input type="text" placeholder="mail@example.com" id="email" class="uk-form-large uk-width-1-1">
						</div>
					</div>
				</div>
				<div class="uk-grid uk-grid-small">
					<div class="uk-width-1-1">
						<div class="uk-form-icon fix-iconform">
							<i class="uk-icon-lock"></i>
							<input type="password" placeholder="Password" id="password" class="uk-form-large uk-width-1-1">
						</div>
					</div>
				</div>
				<div class="uk-grid uk-grid-small">
					<div class="uk-width-1-1">
						<div class="uk-alert uk-alert-warning">
							Lupa password? <a href="/register/forgot"><i class="uk-icon-wrench"></i> Pulihkan</a>
						</div>
					</div>
				</div>
				<hr class="uk-grid-divider" />
				<button class="uk-button uk-button-large uk-button-success uk-align-center" type="button">
					<i class="uk-icon-sign-in"></i>
					Masuk
				</button>
			</form>
		</div>
		<div class="uk-grid uk-grid-small">
			<div class="uk-width-1-1">
				<div class="uk-alert uk-alert-success">
					Belum punya akun? <a href="/register"><i class="uk-icon-plus-circle"></i> Buat akun baru</a>
				</div>
			</div>
		</div>
	</div>
	</div>
	</div>
{% endblock %}

				