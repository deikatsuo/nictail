{% extends 'main.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block left_menu %}{% endblock %}
{% block content %}
	<div class="uk-width-large-4-10">
		<div class="uk-panel uk-panel-header uk-panel-box uk-panel-box-secondary">
			<h3 class="uk-panel-title">{{ title }}</h3>
			<form class="uk-form uk-form-stacked" id="reg_form" action="/register/process" method="post">
			<div class="uk-form-row">
				<label class="uk-form-label" for="first_name">Nama</label>
				<div class="uk-form-controls">
					<div class="uk-grid uk-grid-small">
	        			<div class="uk-width-medium-1-2 uk-width-small-1-1">
	        				<div class="uk-form-icon fix-iconform">
	        					<i class="uk-icon-user"></i>
	        					<input type="text" placeholder="Depan" class="uk-width-1-1" id="first_name" name="first_name">
	        				</div>
	        			</div>
	        			<div class="uk-width-medium-1-2 uk-width-small-1-1">
	        				<div class="uk-form-icon fix-iconform">
	        					<i class="uk-icon-users"></i>
	        					<input type="text" placeholder="Belakang" class="uk-width-1-1" id="last_name" name="last_name">
	        				</div>
	        			</div>
	        		</div>
				</div>
			</div>
			<div class="uk-form-row">
				<label class="uk-form-label" for="email">Email</label>
				<div class="uk-form-controls">
					<div class="uk-grid uk-grid-small">
						<div class="uk-width-1-1">
							<div class="uk-form-icon fix-iconform">
								<i class="uk-icon-at"></i>
								<input type="text" placeholder="mail@example.com" class="uk-width-1-1" id="email" name="email">
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="uk-form-row">
				<label class="uk-form-label" for="first_name">Kata Sandi</label>
				<div class="uk-form-controls">
					<div class="uk-grid uk-grid-small">
	        			<div class="uk-width-medium-1-2 uk-width-small-1-1">
	        				<div class="uk-form-icon fix-iconform">
	        					<i class="uk-icon-lock"></i>
	        					<input type="password" placeholder="Password" class="uk-width-1-1" id="password" name="password">
	        				</div>
	        			</div>
	        			<div class="uk-width-medium-1-2 uk-width-small-1-1">
	        				<div class="uk-form-icon fix-iconform">
	        					<i class="uk-icon-unlock-alt"></i>
	        					<input type="password" placeholder="Ulangi Password" class="uk-width-1-1" id="repassword" name="repassword">
	        				</div>
	        			</div>
	        		</div>
				</div>
			</div>
			<div class="uk-form-row">
				<label class="uk-form-label" for="birthday">Tanggal Lahir</label>
				<div class="uk-form-controls">
					<div class="uk-grid uk-grid-small">
						<div class="uk-width-1-1">
							<div class="uk-form-icon fix-iconform">
								<i class="uk-icon-calendar"></i>
								<input type="text" placeholder="00-00-0000" class="uk-width-1-1" id="birthday" name="birthday" data-uk-datepicker="{format:'DD-MM-YYYY'}">
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="uk-form-row">
				<span class="uk-form-label" for="country">Kependudukan</span>
				<div class="uk-form-controls">
					<div class="uk-grid uk-grid-small">
						<div class="uk-width-1-1">
							<div class="uk-form-icon fix-iconform">
								<i class="uk-icon-flag"></i>
								<select class="uk-width-1-1 fix-iconformselect" id="country" name="country">
									<option value="" disabled selected>Pilih negaramu</option>				
								 		{% set country_name=country.listCountryName() %}
										{% set country_code=country.listCountryCode() %}
										{% for i in 0..country_code|length-1 %}
											{% if vCountryIso == country_code[i] %}
												<option value='{{ country_code[i] }}' selected>{{ country_name[i] }}</option>
											{% else %}
												<option value='{{ country_code[i] }}'>{{ country_name[i] }}</option>
											{% endif %}
										{% endfor %}
								</select>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="uk-form-row">
				<span class="uk-form-label">Kelamin</span>
				<div class="uk-form-controls uk-form-controls-text radio-bg" id="gender">
					<label>
						<input type="radio" name="gender" value="m">
						Laki-Laki
					</label>
					<label>
						<input type="radio" name="gender" value="f">
						Perempuan
					</label>
				</div>
			</div>
			<div class="uk-form-row">
				<sspan class="uk-form-label">Recaptcha</sspan>
				<div class="uk-form-controls">
					<div class="g-recaptcha-c">
						<div class="g-recaptcha" style="margin:0 auto;display:table;" data-sitekey="6LeNTPYSAAAAALil19Biws4VmNmzYtTMcj1tnAZr"></div>
						<i style="display:none;">Error</i>
					</div>
				</div>
			</div>
			<div class="uk-form-row">
				<div class="uk-form-controls">
					<div class="uk-alert uk-alert-warning">
					<b>PERINGATAN: </b>Dengan mengisi formulir dan mendaftar berarti anda telah menyetujui <a href="#"><i class="uk-icon-book"></i> Persyaratan Layanan</a> kami
					</div>
				</div>
			</div>
			<div class="uk-form-row">
				<div class="uk-form-controls">
					<button class="uk-button uk-button-large uk-button-success uk-align-center" type="submit">
						<i class="uk-icon-save"></i>
						Mendaftar
					</button>
				</div>
			</div>
			</form>
		</div>
		<div class="uk-grid uk-grid-small">
			<div class="uk-width-1-1">
				<div class="uk-alert uk-alert-success">
					Sudah memiliki akun? <a href="/register/login"><i class="uk-icon-sign-in"></i> Masuk</a>
				</div>
			</div>
		</div>
	</div>
	<div class="uk-width-large-6-10 uk-hidden-medium">
		
	</div>
{% endblock %}

				