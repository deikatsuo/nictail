{% extends 'main.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block content %}
	<div class="row">
		<div class="col s12">
			<div class="row">
				<div class="col s12">
					<div class="section">
						<h5>{{ title }}</h5>
						<p>Sebelum mendaftar, harap pengguna telah menyetujui ketentuan yang berlaku</p>
					</div>
					<div class="divider"></div>
				</div>
			</div>
		</div>

		<div class="col s12">
			<div class="row">
				<div class="col s12 m12 l9">
				<div class="card-panel">
				<div class="row">
					<form action="#" id="register_form">

						<div class="input-field col s12 m6 l6">
					        <input id="first_name" type="text" length="12" class="validate" required="">
					        <label for="first_name">Nama Depan</label>
			        	</div>
			        	<div class="input-field col s12 m6 l6">
					        <input id="last_name" type="text" length="24" class="validate" required="">
					        <label for="last_name">Nama Belakang</label>
		    			</div>

						<div class="input-field col s12">
					        <input id="email" type="email" class="validate" required="">
					        <label for="email">Email</label>
		    			</div>

						<div class="input-field col s12 m6 l6">
					        <input id="birthday" type="text" placeholder="1995/11/30" class="validate" required="">
					        <label for="birthday">Tanggal Lahir</label>
			        	</div>
						<div class="input-field col s12 m6 l6">
							<select id="country" class="validate" required="">
								<option value="" disabled selected>Pilih negaramu</option>				
							 		{% set country_name=country.listCountryName() %}
									{% set country_code=country.listCountryCode() %}
									{% for i in 2..country_name|length %}
										{% if vCountryIso == country_code[loop.index] %}
											<option value='{{ country_code[loop.index] }}' selected>{{ country_name[loop.index] }}</option>
										{% else %}
											<option value='{{ country_code[loop.index] }}'>{{ country_name[loop.index] }}</option>
										{% endif %}
									{% endfor %}
							</select>
							<label>Saya Tinggal Di</label>
						</div>

						<div class="input-field col s12">
						    <select id="gender" class="icons validate" required="">
							    <option value="" disabled selected>Pilih Jenis Kelamin</option>
							    <option value="" data-icon="/asset?source=male.png" class="left">Laki-Laki</option>
							    <option value="" data-icon="/asset?source=female.png" class="left">Perempuan</option>
						    </select>
							<label>Saya Seorang</label>
						</div>

						<div class="input-field col s12 m6 l6">
					        <input id="password" type="password" length="16" required="">
					        <label for="password">Kata Sandi</label>
			        	</div>
			        	<div class="input-field col s12 m6 l6">
					        <input id="repassword" type="password" length="16" required="">
					        <label for="repassword">Ulangi Kata Sandi</label>
		    			</div>

						<div class="input-field col s12">
							<div class="card-panel teal">
								<span class="white-text">
									Dengan mengeklik Mendaftar, Anda menyetujui Ketentuan kami dan bahwa Anda telah membaca Kebijakan Data kami, termasuk Penggunaan Kuki.
								</span>
							</div>
						</div>
						<div class="input-field col s12">
							<button class="btn waves-effect waves-light" type="submit" name="action">Mendaftar
			    				<i class="material-icons right">send</i>
			 				</button>
			 			</div>
					</form>
				</div>
				</div>
				</div>
			</div>	
		</div>
	</div>
{% endblock %}

				